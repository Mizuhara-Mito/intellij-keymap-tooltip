{
  "name": "intellij-shortcut-hint",
  "displayName": "IntelliJ Shortcut Hint",
  "description": "A simple helper for developers transitioning from IntelliJ IDEA to VS Code.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "intellijShortcutHint.checkShortcut",
        "title": "Check IntelliJ Shortcut"
      },
      {
        "command": "intellijShortcutHint.listSupportedShortcuts",
        "title": "IntelliJ Shortcut Hint: List Supported Shortcuts"
      }
    ],
    "keybindings": [
      {
        "command": "intellijShortcutHint.checkShortcut",
        "key": "ctrl+alt+l",
        "when": "editorTextFocus && !isMac",
        "args": {
          "key": "ctrl+alt+l"
        }
      },
      {
        "command": "intellijShortcutHint.checkShortcut",
        "key": "cmd+alt+l",
        "when": "editorTextFocus && isMac",
        "args": {
          "key": "cmd+alt+l"
        }
      },
      {
        "command": "intellijShortcutHint.checkShortcut",
        "key": "ctrl+d",
        "when": "editorTextFocus && !isMac",
        "args": {
          "key": "ctrl+d"
        }
      },
      {
        "command": "intellijShortcutHint.checkShortcut",
        "key": "cmd+d",
        "when": "editorTextFocus && isMac",
        "args": {
          "key": "cmd+d"
        }
      },
      {
        "command": "intellijShortcutHint.checkShortcut",
        "key": "ctrl+shift+n",
        "when": "editorTextFocus && !isMac",
        "args": {
          "key": "ctrl+shift+n"
        }
      },
      {
        "command": "intellijShortcutHint.checkShortcut",
        "key": "cmd+shift+o",
        "when": "editorTextFocus && isMac",
        "args": {
          "key": "cmd+shift+o"
        }
      },
      {
        "command": "intellijShortcutHint.checkShortcut",
        "key": "ctrl+e",
        "when": "editorTextFocus && !isMac",
        "args": {
          "key": "ctrl+e"
        }
      },
      {
        "command": "intellijShortcutHint.checkShortcut",
        "key": "cmd+e",
        "when": "editorTextFocus && isMac",
        "args": {
          "key": "cmd+e"
        }
      },
      {
        "command": "intellijShortcutHint.checkShortcut",
        "key": "ctrl+b",
        "when": "editorTextFocus && !isMac",
        "args": {
          "key": "ctrl+b"
        }
      },
      {
        "command": "intellijShortcutHint.checkShortcut",
        "key": "cmd+b",
        "when": "editorTextFocus && isMac",
        "args": {
          "key": "cmd+b"
        }
      },
      {
        "command": "intellijShortcutHint.checkShortcut",
        "key": "alt+f7",
        "when": "editorTextFocus",
        "args": {
          "key": "alt+f7"
        }
      },
      {
        "command": "intellijShortcutHint.checkShortcut",
        "key": "shift+f6",
        "when": "editorTextFocus",
        "args": {
          "key": "shift+f6"
        }
      },
      {
        "command": "intellijShortcutHint.checkShortcut",
        "key": "ctrl+y",
        "when": "editorTextFocus && !isMac",
        "args": {
          "key": "ctrl+y"
        }
      },
      {
        "command": "intellijShortcutHint.checkShortcut",
        "key": "cmd+y",
        "when": "editorTextFocus && isMac",
        "args": {
          "key": "cmd+y"
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
